@model UniversalDashboard.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>
<form asp-action="EditUser" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="PasswordHash">New Password (leave blank to keep unchanged):</label>
        <input type="password" class="form-control" name="PasswordHash" autocomplete="new-password" />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="RoleLevel" class="form-label"></label>
        <select asp-for="RoleLevel" class="form-select">
            <option value="1">SuperAdmin</option>
            <option value="2">Admin</option>
            <option value="3">User</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="SiteId" class="form-label"></label>
        <input asp-for="SiteId" class="form-control" />
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Users" class="btn btn-secondary">Cancel</a>
</form>
