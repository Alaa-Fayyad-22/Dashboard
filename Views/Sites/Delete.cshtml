@model UniversalDashboard.Models.SiteConnection
@{
    ViewData["Title"] = "Delete Site";
}
<h2>Delete Site</h2>
<p>Are you sure you want to delete this site connection?</p>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">API URL</dt>
    <dd class="col-sm-10">@Model.ApiUrl</dd>
    <dt class="col-sm-2">API Key</dt>
    <dd class="col-sm-10">@Model.ApiKey</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Sites" class="btn btn-secondary">Cancel</a>
</form>
