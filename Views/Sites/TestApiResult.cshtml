@{
    ViewBag.Title = "API Performance Check";
}

<h2>API Performance Test for @ViewBag.ApiName</h2>

<div class="card shadow p-3">
    <p><strong>Status:</strong> @ViewBag.Status</p>
    <p>
        <strong>Response Time:</strong>
        @(ViewBag.ResponseTime >= 0 ? $"{ViewBag.ResponseTime} ms" : "N/A")
    </p>
    @if (ViewBag.DataPreview != null)
    {
        <p><strong>Response Preview:</strong></p>
        <pre class="bg-light p-2 rounded">@ViewBag.DataPreview</pre>
    }
</div>

<a href="/Sites" class="btn btn-secondary mt-3">Back to Sites</a>
